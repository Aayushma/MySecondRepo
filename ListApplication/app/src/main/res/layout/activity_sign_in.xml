<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.listapplication.SignInActivity"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/capture"
        android:id="@+id/img"
        android:scaleType="fitXY"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:id="@+id/txtView"
        android:weightSum="2"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#f0f0fa"
        >
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:id="@+id/txtSignin"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#725ECE"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/txtSignup"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#725ECE"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="300dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:id="@+id/signinlayout"
        >
        <com.example.com.example.view.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="W"
            android:paddingTop="20dp"/>
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:gravity="center"
            android:paddingTop="20dp"
            android:id="@+id/email"/>

        <com.example.com.example.view.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="K"
            android:paddingTop="20dp"
            android:layout_below="@+id/email"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:gravity="center"
            android:inputType="textPassword"
            android:paddingTop="20dp"
            android:id="@+id/pass"
            android:layout_below="@+id/email"
           />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
           android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:background="@drawable/btn_clicked"
            android:id="@+id/btnSignin"
            android:layout_below="@+id/pass"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/facebookbutton"
            android:id="@+id/btnfb"
            android:layout_below="@+id/btnSignin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:gravity="center"
            android:paddingTop="20dp"
            android:id="@+id/txtQues"
            android:layout_below="@+id/btnfb"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="300dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:id="@+id/signuplayout"
        android:visibility="gone">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:paddingTop="20dp"
            android:id="@+id/fn"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:paddingTop="20dp"
            android:id="@+id/ln"
            android:layout_below="@+id/fn"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:paddingTop="20dp"
            android:id="@+id/signupemail"
            android:layout_below="@+id/ln"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingTop="20dp"
            android:id="@+id/signuppass"
            android:layout_below="@+id/signupemail"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:background="@drawable/btn_clicked"
            android:id="@+id/btnSignup"
            android:layout_below="@+id/signuppass"/>

    </RelativeLayout>


</RelativeLayout>

    </ScrollView>
